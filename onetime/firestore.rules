rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Broad rule - CAUTION: allows full access to all authenticated users. 
    // Commenting out to enforce specific rules below.
    // match /{document=**} {
    //   allow read, write: if request.auth != null;
    // }
    
    // Key Exchange Sessions Rules
    match /kex/{sessionId} {
      // Allow create if authenticated and user is a participant
      allow create: if request.auth != null &&
                     request.auth.uid in request.resource.data.participants;
      
      // Allow single-document gets if the caller is a participant
      allow get: if request.auth != null &&
                 request.auth.uid in resource.data.participants;

      // Allow queries (list) only when the client includes a filter
      // that guarantees the returned documents have the caller as a participant.
      // Specifically we require the client to query with:
      //   where('participants', 'array-contains', request.auth.uid)
      allow list: if request.auth != null &&
                  request.query.where('participants', 'array-contains', request.auth.uid);

      // Allow updates (e.g. marking segments scanned) for participants
      allow update: if request.auth != null &&
                     request.auth.uid in resource.data.participants;

      // Allow delete only for the session source when the session is completed
      // This prevents other participants from removing the session prematurely
      allow delete: if request.auth != null &&
                     request.auth.uid == resource.data.sourceId &&
                     resource.data.status == 'completed';
    }

    // Conversations Rules
    match /conversations/{conversationId} {
      // Allow create if authenticated and user is a peer
      allow create: if request.auth != null &&
                     request.auth.uid in request.resource.data.peerIds;
      
      // Allow read/update/delete if user is a peer OR if conversation is in joining state
      allow read, update, delete: if request.auth != null && (
          request.auth.uid in resource.data.peerIds ||
          resource.data.state == 'joining'
      );

      // Messages Subcollection Rules
      match /messages/{messageId} {
        // Allow access only if the user is a peer of the parent conversation
        // Note: checking parent document requires a get() which costs 1 read
        allow read, write: if request.auth != null &&
                            request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.peerIds;
      }
    }
  }
}