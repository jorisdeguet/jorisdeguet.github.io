rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Broad rule - CAUTION: allows full access to all authenticated users. 
    // Commenting out to enforce specific rules below.
    // match /{document=**} {
    //   allow read, write: if request.auth != null;
    // }
    
    // Key Exchange Sessions Rules
    match /kex/{sessionId} {
      // Allow create if authenticated and user is a participant
      allow create: if request.auth != null &&
                     request.auth.uid in request.resource.data.participants;
      
      // Allow read/update if user is a participant
      allow read, update: if request.auth != null && 
                          request.auth.uid in resource.data.participants;
      
      // Allow delete for anyone authenticated (for cleanup when deleting conversation)
      allow delete: if request.auth != null;
    }

    // Conversations Rules
    match /conversations/{conversationId} {
      // Allow create if authenticated and user is a peer
      allow create: if request.auth != null &&
                     request.auth.uid in request.resource.data.peerIds;
      
      // Allow read/update/delete if user is a peer OR if conversation is in joining state
      allow read, update, delete: if request.auth != null && (
          request.auth.uid in resource.data.peerIds ||
          resource.data.state == 'joining'
      );

      // Messages Subcollection Rules
      match /messages/{messageId} {
        // Allow access only if the user is a peer of the parent conversation
        // Note: checking parent document requires a get() which costs 1 read
        allow read, write: if request.auth != null &&
                            request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.peerIds;
      }
    }
  }
}